@using System.Web.Optimization
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - LexLow.ru</title>
    <link rel="stylesheet" href="~/Content/css/bootstrap.css" id="link_style">
    @Scripts.Render("~/Content/js/modernizr-2.6.2.js")
</head>
<body>
    <div> 
        <div class="navbar navbar-default navbar-fixed-top" id="navbar_main">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="navbar-brand" >
                    <span style="color:yellowgreen;" class="glyphicon glyphicon glyphicon-th"></span>
                    <span> LexLow.ru</span>
                </div>
            </div>
            <div class="navbar-collapse collapse navbar-responsive-collapse">
                <ul class="nav navbar-nav">
                    @*<li><a href="javascript:void(0)">About</a></li>
                    <li><a href="javascript:void(0)">Blog</a></li>*@
                    <li><a href="/Blog/RTE">WYSIWYG</a></li>
                    @*<li>
                        <a href="javascript:void(0)"> 
                           Contact
                        </a>
                    </li>*@
                </ul>
                
                    <ul class="nav navbar-nav navbar-right">

                        <li class="dropdown">
                            <a href="javascript:void(0)" style="color:yellowgreen;" class="dropdown-toggle glyphicon glyphicon-user" data-toggle="dropdown"><b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a href="#"> 
                                        <i class="glyphicon glyphicon-log-in"></i>
                                        <span style="margin-left:10px;">Sign In</span> 
                                    </a>
                                </li>
                                <li>
                                    <a href="#">
                                        <i class="glyphicon glyphicon-envelope"></i>
                                        <span style="margin-left:10px;">Forgot Password</span>
                                    </a>
                                </li>
                                
                                <li class="divider"></li>
                                <li>
                                    <a href="#">
                                        <i class="glyphicon glyphicon-th-list"></i>
                                        <span style="margin-left:10px;">Sign Up</span>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="dropdown" style="margin-right:10px">
                            <a href="javascript:void(0)" style="color:yellowgreen;" class="dropdown-toggle glyphicon glyphicon-cog" data-toggle="dropdown"><b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li onclick="NavbarLoc()">
                                    <a href="javascript:void(0)">
                                        <i class="glyphicon glyphicon-saved" id="icon_navbar_lock"></i>
                                        <span style="margin-left:10px;">Lock Top Navbar</span>
                                    </a>
                                </li>
                                <li class="divider"></li>
                                <li><a href="javascript:void(0)" onclick="ChangeTheme('Content/css/bootstrap.css','icon_theme_deffault')">
                                        <i class="glyphicon glyphicon-arrow-right" id="icon_theme_deffault"></i>
                                          Deffault Theme
                                    </a>
                                </li>
                                <li>
                                    <a href="javascript:void(0)" onclick="ChangeTheme('Content/css/bootstrap_light.css','icon_theme_light')">
                                        <i class="" id="icon_theme_light"></i>
                                        Light Theme
                                    </a>
                                </li>
                                <li>
                                <a href="javascript:void(0)" onclick="ChangeTheme('Content/css/bootstrap_cerulean.css','icon_theme_blue')">
                                    <i class="" id="icon_theme_blue"></i>
                                    Blue Theme
                                </a>
                                </li>
                                
                            </ul>
                        </li>
                    </ul>
</div>
        </div>

       <div id="div_top_indent" style="height:45px;">
       </div>
        <div class="row">
            <div class="col-md-1"></div>
            <div class="col-md-10">
                @RenderBody()
            </div>
            <div class="col-md-1"></div>
        </div>
    </div>
    
    @Scripts.Render("~/Content/js/jquery-1.10.2.js")
    @Scripts.Render("~/Content/js/jquery.validate.js")
    @Scripts.Render("~/Content/js/bootstrap.js")
    @Scripts.Render("~/Content/js/respond.js")
    @Scripts.Render("~/Content/js/site.js")

   

    
</body>
</html>
